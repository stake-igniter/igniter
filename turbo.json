{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["clean", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "cache": false,
      "env": [
        "PROVIDERS_CDN_URL",
        "POSTGRES_URL",
        "TEMPORAL_URL",
        "TEMPORAL_NAMESPACE",
        "TEMPORAL_TASK_QUEUE"
      ]
    },
    "build:docker": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
